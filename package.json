{
  "name": "angular-architecture",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:local": "ng serve --configuration local",
    "start:mock": "ng serve --configuration mock",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:local": "ng build --configuration local",
    "build:mock": "ng build --configuration mock",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ng": "ng test",
    "test:ng:watch": "ng test --watch",
    "coverage": "vitest run --coverage",
    "test:vitest": "vitest",
    "test:vitest:run": "vitest run",
    "test:vitest:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "generate:component": "node tools/generate-component.mjs",
    "serve:ssr:angular-architecture": "node dist/angular-architecture/server/server.mjs",
    "api": "json-server db.json --port 3000",
    "dev": "concurrently \"npm run api\" \"npm start\"",
    "dev:mock": "concurrently \"npm run api\" \"npm run start:mock\"",
    "dev:local": "concurrently \"npm run api\" \"npm run start:local\"",
    "check:i18n": "node tools/check-i18n.mjs",
    "analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/angular-architecture/stats.json --mode static --report dist/webpack-report.html",
    "analyze:dev": "ng build --stats-json && npx webpack-bundle-analyzer dist/angular-architecture/stats.json --mode static --report dist/webpack-report-dev.html",
    "bundle:size": "npm run build:prod && node tools/bundle-size-check.mjs",
    "bundle:check": "node tools/bundle-size-check.mjs",
    "bundle:monitor": "npm run bundle:check && echo 'ðŸ“Š Run npm run analyze for detailed visualization'"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.5",
    "@angular/cdk": "^21.0.0",
    "@angular/common": "^21.0.5",
    "@angular/compiler": "^21.0.5",
    "@angular/core": "^21.0.5",
    "@angular/forms": "^21.0.5",
    "@angular/platform-browser": "^21.0.5",
    "@angular/platform-server": "^21.0.5",
    "@angular/router": "^21.0.5",
    "@angular/ssr": "^21.0.3",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "ag-grid-angular": "^34.2.0",
    "ag-grid-community": "^34.2.0",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.2",
    "@analogjs/vitest-angular": "^2.2.2",
    "@angular-eslint/eslint-plugin": "^21.0.0",
    "@angular-eslint/eslint-plugin-template": "^21.0.0",
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.5",
    "@angular/platform-browser-dynamic": "^21.0.5",
    "@axe-core/playwright": "^4.10.2",
    "@testing-library/angular": "^18.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.18",
    "baseline-browser-mapping": "^2.9.18",
    "concurrently": "^9.1.0",
    "eslint": "^9.38.0",
    "jsdom": "^27.4.0",
    "json-server": "^0.17.4",
    "axe-core": "^4.10.2",
    "typescript": "~5.9.2",
    "vitest-axe": "^0.1.0",
    "vitest": "^4.0.18",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
