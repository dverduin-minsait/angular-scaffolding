{
  "name": "angular-architecture",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:local": "ng serve --configuration local",
    "start:mock": "ng serve --configuration mock",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:local": "ng build --configuration local",
    "build:mock": "ng build --configuration mock",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "generate:component": "node tools/generate-component.mjs",
    "serve:ssr:angular-architecture": "node dist/angular-architecture/server/server.mjs",
    "api": "json-server db.json --port 3000",
    "dev": "concurrently \"npm run api\" \"npm start\"",
    "dev:mock": "concurrently \"npm run api\" \"npm run start:mock\"",
    "dev:local": "concurrently \"npm run api\" \"npm run start:local\"",
    "check:i18n": "node tools/check-i18n.mjs",
    "analyze": "ng build --configuration analyze && npx source-map-explorer dist/angular-architecture/browser/main-*.js --html dist/bundle-report.html",
    "analyze:dev": "ng build && npx source-map-explorer dist/angular-architecture/browser/main-*.js",
    "analyze:webpack": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/angular-architecture/stats.json --mode static --report dist/webpack-report.html",
    "bundle:size": "npm run build:prod && node tools/bundle-size-check.mjs",
    "bundle:check": "node tools/bundle-size-check.mjs",
    "bundle:monitor": "npm run bundle:check && echo 'ðŸ“Š Run npm run analyze for detailed visualization'"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.1",
    "@angular/cdk": "20.2.5",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/ssr": "^20.3.2",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "ag-grid-angular": "^34.2.0",
    "ag-grid-community": "^34.2.0",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "^20.0.0",
    "@angular-eslint/eslint-plugin": "^20.4.0",
    "@angular-eslint/eslint-plugin-template": "^20.4.0",
    "@angular/build": "^20.3.2",
    "@angular/cli": "^20.3.2",
    "@angular/compiler-cli": "^20.3.0",
    "@axe-core/playwright": "^4.10.2",
    "@testing-library/angular": "^18.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.17.19",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.38.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-preset-angular": "^14.4.0",
    "json-server": "^0.17.4",
    "source-map-explorer": "^2.5.3",
    "typescript": "~5.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
